{
  "manifest_version": 3,
  "name": "CiaoClipBoard",
  "version": "1.0",
  "description": "Clear clipboard content with one click - Nothing left after 1 click",
  "permissions": [
    "clipboardWrite",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": ["bubble.css"],
      "js": ["bubble.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [{
    "resources": ["icons/*.svg"],
    "matches": ["<all_urls>"]
  }],
  "minimum_chrome_version": "88"
} 